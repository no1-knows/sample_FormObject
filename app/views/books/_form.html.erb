  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :出身地 %>
    <%= form.text_field :birth_place %>
  </div>

  <div class="field">
    <%= form.label :生年月日 %>
    <%= form.date_select :birth_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
