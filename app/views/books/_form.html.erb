<%= form_with(model: @author_book, url: books_path) do |form| %>
  <% if @author_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@author_book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @author_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
